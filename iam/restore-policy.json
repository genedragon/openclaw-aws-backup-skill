{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3RestoreReadOnly",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::BACKUP_BUCKET_NAME",
        "arn:aws:s3:::BACKUP_BUCKET_NAME/*"
      ]
    },
    {
      "Sid": "KMSDecrypt",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:DescribeKey"
      ],
      "Resource": "*"
    }
  ]
}
